<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/textView"
        android:layout_width="411dp"
        android:layout_height="30dp"
        android:background="#035acb"
        android:gravity="center"
        android:text="首页"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_marginTop="20dp"
        android:layout_width="411dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="检索非遗关键字"
        android:inputType="textNoSuggestions"
        android:background="#ffffff"
        tools:layout_editor_absoluteY="59dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/asd"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:gravity="center">

            <android.widget.Button
                android:id="@+id/all"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="全部"
                android:textSize="8dp"
                android:layout_marginRight="5dp"
                android:textColor="#ffffff"
                />

            <Button
                android:id="@+id/kunming"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="昆明市"
                android:textSize="8dp"
                android:layout_marginRight="5dp"
                android:textColor="#ffffff"
                />

            <android.widget.Button
                android:id="@+id/lijiang"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="丽江市"
                android:textSize="8dp"
                android:layout_marginRight="5dp"
                android:textColor="#ffffff"
                />

            <android.widget.Button
                android:id="@+id/dali"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="大理"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                />
            <android.widget.Button
                android:id="@+id/wenshan"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="文山"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                />
            <android.widget.Button
                android:id="@+id/baoshan"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="保山"
                android:textColor="#ffffff"
                android:textSize="8dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:textColor="#ffffff"
            android:orientation="horizontal"
            android:gravity="center">

            <android.widget.Button
                android:id="@+id/yuxi"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:textColor="#ffffff"
                android:layout_height="30dp"
                android:text="玉溪"
                android:textSize="8dp"
                android:layout_marginRight="5dp"
                />

            <android.widget.Button
                android:id="@+id/lincang"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="临沧"
                android:textColor="#ffffff"
                android:textSize="8dp"
                android:layout_marginRight="5dp"
                />

            <android.widget.Button
                android:id="@+id/puer"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="普洱"
                android:textColor="#ffffff"
                android:textSize="8dp"
                android:layout_marginRight="5dp"
                />

            <android.widget.Button
                android:id="@+id/chuxiong"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="楚雄"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                />
            <android.widget.Button
                android:id="@+id/zhaotong"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="昭通"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                />
            <android.widget.Button
                android:id="@+id/dehong"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="德宏"
                android:textColor="#ffffff"
                android:textSize="8dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:gravity="center">

            <android.widget.Button
                android:id="@+id/nujiang"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="怒江"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                />

            <android.widget.Button
                android:id="@+id/honghe"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="红河"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                />

            <android.widget.Button
                android:id="@+id/qujing"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="曲靖"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                />

            <android.widget.Button
                android:id="@+id/diqing"
                android:background="@drawable/radius2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="迪庆"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                />
            <android.widget.Button
                android:id="@+id/xishuangbanna"
                android:background="@drawable/radius2"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="西双版纳"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/quetion"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="110dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="141dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="每日一题"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:background="@drawable/radius"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:background="#ffffff">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="以下哪个民族庆祝火把节"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#a6b4c0"
                    />
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/choice1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="蒙古族"
                    android:textSize="14dp"
                    android:background="@drawable/radius2"
                    />

                <Button
                    android:id="@+id/choice2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="彝族"
                    android:textSize="14dp"
                    android:background="@drawable/radius2"
                    />

                <Button
                    android:id="@+id/choice3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="高山族"
                    android:textSize="14dp"
                    android:background="@drawable/radius2"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/mapshow"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示地图"
        />
    <LinearLayout

        android:id="@+id/content"

        android:layout_width="fill_parent"

        android:layout_height="0dp"

        android:layout_weight="1"

        android:orientation="vertical">



    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:gravity="bottom"

        android:orientation="vertical">
    <RadioGroup
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/ra_group"
        android:layout_height="70dp">

        <RadioButton
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:button="@null"
            android:id="@+id/ra_1"

            android:gravity="center"
            android:text="首页"
            android:drawablePadding="3dp"

            android:layout_gravity="center"
            />

        <RadioButton
            android:layout_width="0dp"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/ra_2"
            android:text="交互"
            android:drawablePadding="3dp"

            android:layout_gravity="center"

            />

        <RadioButton
            android:layout_width="0dp"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的"
            android:drawablePadding="3dp"
            android:layout_height="wrap_content"
            android:id="@+id/ra_3"

            android:layout_gravity="center"

            />

    </RadioGroup>
    </LinearLayout>
</LinearLayout>